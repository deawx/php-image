{
    "name": "sokil/php-image",
    "description": "Realisation of some operations with images like croping and scaling.",
    "authors": [
        {
            "name": "sokil",
            "email": "dmytro.sokil@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "php-coveralls/php-coveralls": "^2.2.0"
    },
    "autoload": {
        "psr-4": {
            "Sokil\\Image\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sokil\\Image\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "cover": "./vendor/bin/phpunit --coverage-clover ./build/phpunit/clover.xml",
        "coveralls": "./vendor/bin/php-coveralls -v"
    }
}
